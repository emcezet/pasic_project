echo "Starting config script"
PROJ_DIR = $(pwd)
echo ${PROJ_DIR}
TOP_DIR = $(PROJ_DIR)/top
if [ ! -d $(TOP_DIR) ]; then exit -1 fi
COMMON_DIR = $(PROJ_DIR)/common
if [ ! -d $(COMMON_DIR) ]; then exit -1 fi
COMP_DIR = $(PROJ_DIR)/component
if [ ! -d $(COMP_DIR) ]; then exit -1 fi

